<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tweet_tv_tweet"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="TWEET"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_tweet_txt_tweet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_toRightOf="@id/dialog_tweet_tv_tweet"/>

    <Button
        android:id="@+id/dialog_tweet_btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_tweet_txt_tweet"
        android:layout_margin="7dp"
        android:text="Apply" />

</RelativeLayout>