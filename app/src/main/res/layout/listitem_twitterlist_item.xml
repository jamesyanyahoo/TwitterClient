<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/listitem_twitterlist_item_iv_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="3dp" />

        <TextView
            android:id="@+id/listitem_twitterlist_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listitem_twitterlist_item_iv_profile_image"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listitem_twitterlist_item_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listitem_twitterlist_item_tv_name"
            android:paddingLeft="2dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/listitem_twitterlist_item_tv_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/listitem_twitterlist_item_tv_account"
            android:paddingLeft="7dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/listitem_twitterlist_item_tv_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listitem_twitterlist_item_tv_name"
            android:layout_toRightOf="@id/listitem_twitterlist_item_iv_profile_image"
            android:autoLink="web"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>